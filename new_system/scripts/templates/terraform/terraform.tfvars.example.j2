# ============================================================
# Terraform Variables Example
# Generated from topology.yaml
# ============================================================
#
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
#
# IMPORTANT: terraform.tfvars is in .gitignore - never commit it!
# ============================================================

# Proxmox node name
proxmox_node = "gamayun"

# Proxmox API URL
{% if mgmt_network %}
# Management network: {{ mgmt_network.cidr }}
proxmox_api_url = "https://10.0.99.1:8006"
{% else %}
proxmox_api_url = "https://YOUR_PROXMOX_IP:8006"
{% endif %}

# Proxmox API token
# Create token: Datacenter → Permissions → API Tokens → Add
# Format: username@realm!tokenid=secret
proxmox_api_token = "root@pam!terraform=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Skip TLS verification (for self-signed certificates)
proxmox_insecure = true

# SSH configuration for Proxmox node
proxmox_ssh_user     = "root"
proxmox_ssh_key_path = "~/.ssh/id_ed25519"
